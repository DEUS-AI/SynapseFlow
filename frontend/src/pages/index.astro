---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <div class="min-h-screen bg-slate-900">
    <header class="bg-slate-800 shadow-lg border-b border-slate-700">
      <div class="max-w-7xl mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-slate-100">
          Medical Knowledge Management System
        </h1>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Patient Chat -->
        <a href="/chat/patient:demo" class="block group">
          <div class="bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700 hover:border-blue-500 transition">
            <div class="flex items-center justify-center w-12 h-12 bg-blue-600/20 rounded-lg mb-4">
              <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
              </svg>
            </div>
            <h2 class="text-xl font-semibold mb-2 text-slate-100 group-hover:text-blue-400">Patient Chat</h2>
            <p class="text-slate-400">AI-powered medical assistant with patient context</p>
          </div>
        </a>

        <!-- Knowledge Graph -->
        <a href="/graph" class="block group">
          <div class="bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700 hover:border-green-500 transition">
            <div class="flex items-center justify-center w-12 h-12 bg-green-600/20 rounded-lg mb-4">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
            </div>
            <h2 class="text-xl font-semibold mb-2 text-slate-100 group-hover:text-green-400">Knowledge Graph</h2>
            <p class="text-slate-400">Explore medical entities and relationships</p>
          </div>
        </a>

        <!-- Admin Dashboard -->
        <a href="/admin" class="block group">
          <div class="bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700 hover:border-orange-500 transition">
            <div class="flex items-center justify-center w-12 h-12 bg-orange-600/20 rounded-lg mb-4">
              <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h2 class="text-xl font-semibold mb-2 text-slate-100 group-hover:text-orange-400">Admin Dashboard</h2>
            <p class="text-slate-400">Monitor agents and manage patients</p>
          </div>
        </a>

        <!-- DDA Management -->
        <a href="/dda" class="block group">
          <div class="bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700 hover:border-purple-500 transition">
            <div class="flex items-center justify-center w-12 h-12 bg-purple-600/20 rounded-lg mb-4">
              <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h2 class="text-xl font-semibold mb-2 text-slate-100 group-hover:text-purple-400">DDA Management</h2>
            <p class="text-slate-400">Upload and manage domain models</p>
          </div>
        </a>
      </div>
    </main>
  </div>
</BaseLayout>
